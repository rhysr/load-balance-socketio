{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="jumbotron">
    <h1>Welcome to <span class="zf-green">OMG SOCKETS</span></h1>
    <p>It's running, this is good!</p>
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Load balanced sockets server daemons</h2>
        {% for i in 1..10 %}
        <iframe style="width: 100%; height: 4em" src="/socket-user"></iframe>
        {% endfor %}
    </div>
    <div class="col-md-4">
        <h2>Logs</h2>
        <ul id="log">
        </ul>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
<script src="/logviewer.js"></script>
{% endblock %}
